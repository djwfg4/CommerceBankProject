@model BudgetingApplication.Models.BudgetGoalModelView
@{
    ViewBag.Title = "index";
    Layout = "~/Views/_Layout.cshtml";
}

<script >
    $(document).ready(function () {

    $(".bGoalContainer").hover(
  function() {
      $( this).find('.bGoal-edit').show();
  }, function() {
      $(this).find('.bGoal-edit').hide();
  }
);
    });
</script>

<center><h2>My Budget</h2></center>
<div id="budgetGoalContainter">

    @{
        int percentage = Model.getPercentage();
        double remaining = Model.totalBudgeted - Model.totalSpent;
        string progressType = "progress-bar-success";
        if (percentage > 70 && percentage < 90)
        {
            progressType = "progress-bar-warning";
        }
        else if (percentage >= 90)
        {
            progressType = "progress-bar-danger";
        }
        <div class="bGoalContainer">
            <div class="bGoalUpper">
                <div class="bGoalLabel">
                    <span class="bGoal-parent-label"></span>
                    <span class="bGoal-child-label">Total Budget</span>
                </div>
            </div>
            <div class="bGoalProgress">
                <div class="progress">
                    <div class="progress-bar @progressType" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: @percentage%">
                        
                    </div>
                </div>
                <div class="bGoalLower">
                    <div style="float:left;">Total Spent: <span class="bGoal-amount">$@Model.totalSpent</span> </div>
                    <div style="float:right;">Remaining: <span class="bGoal-amount">$@remaining</span></div>
                    <center><div>Total Budgeted: <span class="bGoal-amount"> $@Model.totalBudgeted</span></div></center>
                </div>
            </div>
        </div>
        <hr />
    }
    @foreach (var item in ViewData.Model.budgetView)
    {
        double incomeGoal, incomeAmount;
        if (item.GoalCategory == 1)
        { //skip displaying the deposit goal
            incomeAmount = Convert.ToDouble(item.TransactionAmount);
            incomeGoal = Convert.ToDouble(item.BudgetGoalAmount);
            ViewData.Add("Parent", this);
            continue;
        }

        double TransactionAmount = (double)item.TransactionAmount;
        TransactionAmount = (TransactionAmount * -1);
        double BudgetGoalAmount = (double)item.BudgetGoalAmount;
        percentage = (int)((TransactionAmount / BudgetGoalAmount) * 100);

        remaining = BudgetGoalAmount - TransactionAmount;
        string parentLabel = item.ParentCategory == null ? "" : item.ParentCategory + ":";

        progressType = "progress-bar-success";
        if (percentage > 70 && percentage < 90)
        {
            progressType = "progress-bar-warning";
        }
        else if (percentage >= 90)
        {
            progressType = "progress-bar-danger";
        }

        <div id="budgetGoal_@item.BudgetGoalID"class="bGoalContainer">
            <div class="bGoalUpper">
                <div class="bGoalLabel">
                    <span class="bGoal-parent-label">@parentLabel</span>
                    <span class="bGoal-child-label">@Html.DisplayFor(modelItem => item.CategoryType)</span>
                    <div class="bGoal-edit" style="float:right;display:none;">
                        @Html.ActionLink("Edit", "InsertBudgetGoal", new { id = item.BudgetGoalID })
                    </div>
                </div>
                <span style="font-style:italic; font-size:x-small">@Html.DisplayFor(modelItem => item.Description)</span>
            </div>
            <div class="bGoalProgress">
                <div class="progress">
                    <div class="progress-bar @progressType" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: @percentage%">
                        
                    </div>
                </div>
                <div class="bGoalLower">
                    <div style="float:left;">Total Spent: <span class="bGoal-amount">$@TransactionAmount</span> </div>
                    <div style="float:right;">Remaining: <span class="bGoal-amount">$@remaining</span></div>
                    <center><div>Total Budgeted: <span class="bGoal-amount"> $@BudgetGoalAmount</span></div></center>
                </div>
            </div>
        </div>

    }
    <div class="bGoalContainer" style="border:0px solid!important;">
        <a type="button" class="btn btn-success" style="float:right;"
           href="~/BudgetGoals/InsertBudgetGoal">+ Add New Category</a>

    </div>
</div>


@section sidebar{
    

    @foreach (var item in Model.budgetView)
    {
        if (item.GoalCategory == 1)
        {
            <div class="bGoalIncome-sidebar">
                <h3>Income</h3>
                <div class="bGoalIncome-sidebar-amount">
                    <span>$@string.Format("{0:n2}", item.TransactionAmount)</span> of
                    <span>$@string.Format("{0:n2}", item.BudgetGoalAmount)</span>
                </div>
            </div>
        }
    }
}