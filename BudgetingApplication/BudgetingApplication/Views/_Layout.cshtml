    <div class="custom-sidebar visible-md-block visible-lg-block">
    @RenderSection("sidebar", false)
</div>
    <div class="container-fluid">
        
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
